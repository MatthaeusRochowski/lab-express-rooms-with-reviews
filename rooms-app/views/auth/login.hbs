<div class="container">
  <div class="justify-content-center mt-5 row">
    <form action="/login" method="post" class="text-center mb-4">
      <div class="form-group">
        <label for="email">User:</label>
        <input type="text" name="email" id="email" class="form-control" placeholder="Type your email" required>
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <input type="text" name="password" id="password" class="form-control" placeholder="Type your password" required>
      </div>
      <button type="submit" class="btn btn-primary">Login</button>
      {{#if message}}
      <p class=" err-message">{{message}}</p>
      {{/if}}
    </form>
    <div class="col-12 text-center">
      <a href="/">Home</a>
    </div>
  </div>
</div>